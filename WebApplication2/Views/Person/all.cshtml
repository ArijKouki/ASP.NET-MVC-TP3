@using WebApplication2.Models

@{
    ViewBag.Title = "all";
}

@{ 
    List<Person> l =(List<Person>)ViewData["peopleList"];
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<div class="row">
    @foreach (Person @p in @l)
    {


        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"> @p.id) @p.lastName @p.firstName   </h5>
                <h6 class="card-subtitle mb-2 text-muted"><b>Email:</b> @p.email</h6>
                <h6 class="card-subtitle mb-2 text-muted"><b>Date birth:</b> @p.dateBirth</h6>
                <h6 class="card-subtitle mb-2 text-muted"><b>Image:</b> <img src=@p.image alt="person image"></h6>
                <h6 class="card-subtitle mb-2 text-muted"> <b>Country: </b>@p.country</h6>
            </div>

        </div>


    }

</div>

